<h1><%= t('.title') %></h1>

<div class="papers">
  <% if @proposals.empty? %>
    No submissions yet? Create one now and give us a solid reason to choose you!
  <% else %>
    <table class="table">
      <tr>
        <th>Call</th>
        <th>Title</th>
        <th>Created at</th>
        <th></th>
      </tr>

      <% @proposals.each do |proposal| %>
        <tr>
          <td class="call"><%= proposal.call_title %></td>
          <td class="title"><%= proposal.title %></td>
          <td><%= proposal.created_at.strftime('%B %d, %Y') %></td>
          <td>
            <%= link_to 'show', proposal_path(proposal.talk_id) %>
            <% if proposal.editable? %>
              <%= link_to 'edit', edit_proposal_path(proposal) %>
              <%= link_to 'destroy', proposal, data: { confirm: 'Are you sure?' }, method: :delete %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>

<% @open_calls.each do |call| %>
  <div class="rules">
    <h3><%= call.title %></h3>
    <p>Open until <%= human_date_with_timezone(call.closes_at) %></p>
    <p><%= call.description %></p>
    <p><%= link_to 'New proposal', new_call_proposal_path(call_id: call.id), class: 'button' %></p>
  </div>
<% end %>
