<h1><%= @proposal.talk_title %></h1>

<div class="papers">
  <div class="time-slot"><%= @proposal.talk_time_slot %></div>

  <div class="descriptions">
    <h4><%= t('activerecord.models.attributes.paper.private_description') %></h4>
    <%= markdown @proposal.talk_private_description %>

    <% if @proposal.talk_public_description.present? %>
      <hr>
      <h4><%= t('activerecord.models.attributes.paper.public_description') %></h4>
      <%= markdown @proposal.talk_public_description %>
    <% end %>
  </div>
</div>

<% if current_user %>
  <% if current_user.can_edit_proposal?(@proposal) && @proposal.editable? %>
    <%= link_to 'Edit', edit_proposal_path(@proposal), class: 'button' %>
  <% elsif @proposal.editable? %>
    <h3><%= t('feedback.title') %></h3>
    <%= simple_form_for Feedback.new, url: mentor_feedback_path(@proposal) do |f| %>
      <%= f.input :feedback, as: :text, required: true, input_html: {rows: 10} %>
      <%= f.submit t('feedback.submit'), class: 'button' %>
    <% end %>
    <p>
      <%= t('feedback.explanation') %>
    </p>
  <% end %>
  <% if current_user.staff? %>
    <%= render "proposals/proposal_admin_section" %>
  <% end %>
<% end %>
